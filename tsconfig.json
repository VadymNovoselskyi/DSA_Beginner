{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "outDir": "./build",
    "noEmitOnError": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "build"]
}

